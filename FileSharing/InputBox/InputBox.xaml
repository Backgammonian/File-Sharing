<Window x:Class="FileSharing.InputBox.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileSharing.InputBox"
        mc:Ignorable="d"
        Title="Input" 
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        SizeToContent="WidthAndHeight">
    <DockPanel
        LastChildFill="True"
            Margin="20">
        <Label
            DockPanel.Dock="Top"
            x:Name="lblQuestion"
            HorizontalContentAlignment="Center" 
            Content="Question:"/>
        <Label
            DockPanel.Dock="Top"
            Height="20"/>
        <TextBox
            DockPanel.Dock="Top"
            x:Name="txtAnswer" Text="Answer"/>
        <Label
            DockPanel.Dock="Top"
            Height="20"/>
        <WrapPanel
            Width="130"
            HorizontalAlignment="Right">
            <Button
            IsDefault="True"
            x:Name="btnDialogOk"
            Click="btnDialogOk_Click"
            MinWidth="60" 
            Content="_Ok"/>
            <Button
            IsCancel="True"
            MinWidth="60"
            Margin="10,0,0,0" 
            Content="_Cancel"/>
        </WrapPanel>
    </DockPanel>
</Window>